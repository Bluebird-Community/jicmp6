<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.opennms</groupId>
  <artifactId>jicmp6-api</artifactId>
  <version>@VERSION@</version>
  <packaging>bundle</packaging>
  <name>OpenNMS ICMPv6 API</name>
  <description>Java JNI API for ICMPv6</description>
  <url>https://github.com/opennms/jicmp6</url>
  <inceptionYear>2011</inceptionYear>

  <organization>
    <name>The OpenNMS Group, Inc.</name>
    <url>https://www.opennms.com/</url>
  </organization>
  <licenses>
    <license>
      <name>GNU Lesser General Public License, Version 3</name>
      <url>https://www.gnu.org/licenses/lgpl-3.0.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>rangerrick</id>
      <name>Benjamin Reed</name>
      <email>ranger@opennms.com</email>
    </developer>
    <developer>
      <id>ronny</id>
      <name>Ronny Trommer</name>
      <email>r.trommer@open-factory.org</email>
    </developer>
    <developer>
      <id>brozow</id>
      <name>Matt Brozowski</name>
      <email>matt@brozowski.com</email>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>Antonio Russo</name>
      <email>rssntn67@yahoo.it</email>
    </contributor>
    <contributor>
      <name>Luiz Angelo Daros de Luca</name>
      <email>luizluca@gmail.com</email>
    </contributor>
  </contributors>
  <scm>
    <connection>scm:git:https://github.com/opennms/jicmp6.git</connection>
    <developerConnection>scm:git:git@github.com:opennms/jicmp6.git</developerConnection>
    <url>https://github.com/opennms/jicmp6</url>
  </scm>
  <issueManagement>
    <system>JIRA</system>
    <url>https://issues.opennms.org/projects/JICMP/issues</url>
  </issueManagement>
  <distributionManagement>
    <snapshotRepository>
      <id>opennms-ossrh</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
    <repository>
      <id>opennms-ossrh</id>
      <url>https://oss.sonatype.org/service/local/staging/deploy/maven2</url>
    </repository>
  </distributionManagement>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>4.2.1</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-RequiredExecutionEnvironment>JavaSE-1.8</Bundle-RequiredExecutionEnvironment>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Version>${project.version}</Bundle-Version>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.1</version>
        <configuration>
          <source>@JAVA_TARGET_VERSION@</source>
          <target>@JAVA_TARGET_VERSION@</target>
          <encoding>UTF-8</encoding>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.4.1</version>
        <configuration>
          <aggregate>true</aggregate>
          <use>false</use>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>nexus-staging-maven-plugin</artifactId>
        <version>1.6.13</version>
        <extensions>true</extensions>
        <configuration>
          <serverId>opennms-ossrh</serverId>
          <nexusUrl>https://oss.sonatype.org/</nexusUrl>
          <autoReleaseAfterClose>true</autoReleaseAfterClose>
        </configuration>
      </plugin>
    </plugins>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh-external</artifactId>
        <version>3.5.2</version>
      </extension>
    </extensions>
  </build>
  <profiles>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>3.0.1</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
